<!-- Find Job Section Start -->
<div class="" id="hotjobs">
  <div class="container">
    <div class="row">
      <h2 class="w3-abo col-lg-6">Trabajos con m&aacute;s Demanda</h2>
      <div class="col-lg-6">
        <%= link_to icon("pencil-square-o","Publicar Trabajo"), new_job_path,:class => "btn btn-primary"%>
        <%= link_to icon("list-alt","Ver Todos"), jobs_path,:class => "btn btn-common btn-rm" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <!-- Listado de trabajos -->
        <%  @item = 1;
            @jobs.each do |job| %>
            <div class="job-list col-md-6">
              <div class="col-lg-12">
                <div class="thumb">
                  <% if job.image.file? %>
                      <%= image_tag job.image.url(), :width=> 100, :height => 100 %>
                  <% else %>
                      <%= image_tag("jobs/job-default.png", :width=> 100, :height => 100) %>
                  <% end %>
                </div>
                <div class="job-list-content">
                  <div class="link-apply" data-toggle="tooltip"  data-placement="top" title=""
                       data-original-title="<%="Solicitar Trabajo #{job.id}" %>">
                    <%= link_to icon("check-square-o"), "/aplicationjobs/new/#{job.id}" %>
                  </div>
                  <h4 class="bold"><span class="red"> Trabajo</span> <%= link_to job.title, job,remote: true %></h4>
                  <h5><span class="red bold"> Empresa</span> <%= link_to job.company.company , job.company ,remote: true  %></h5><br>
                  <div id="<%= "collapse#{@item}" %>" class="" >
                    <strong>Resumen: </strong><%=   job.description[0...140]  %>
                    <%= link_to icon("angle-double-right","Ver Completo"), job,remote: true,class: "my-link" %>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="job-tag">
                  <div class="meta-tag">
                    <span class="red bold">#<%= job.id %></span>
                    <span><%= icon("bars") %><%= job.category.category %></span>
                    <span><%= icon("map-marker") %><%= job.m_country.ncountry %></span>
                    <span><%= icon("clock-o") %><%= job.tipo_work %></span>
                  </div>
                  <p> Posted <%= (((job.created_at.to_time - Time.now)/86400).to_i + 1).abs %> days ago!
                    <%= job.created_at %>
                  </p>
                </div>
              </div>
            </div>
            <% @item+=1;%>
        <% end %>
      </div>
    </div>
  </div>
</div>