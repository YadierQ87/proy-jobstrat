<!-- Slider -->
<div class="slider">
  <div class="callbacks_container">
    <ul class="rslides" id="slider">
      <li>
        <div class="slider-img">
          <%= image_tag("bg/counter-bg.jpg", class: "img-responsive img-centered") %>
        </div>
        <div class="slider-info">
          <h1 class="title-h1">Find the job in the Catalog </h1><br>
          <h2 class="title-h2">More than <strong>12,000</strong> jobs are waiting to Kickstart your career!</h2>
          <div class="search-div">
            <form method="" action="#" class="search-div">
            <div class="row">
              <div class="col-md-4 col-sm-6">
                <div class="form-group">
                  <input class="form-control" type="text" placeholder="job title / keywords / company name">
                  <i class="ti-time"></i>
                </div>
              </div>
              <div class="col-md-4 col-sm-6">
                <div class="form-group">
                  <input class="form-control" type="email" placeholder="city / province / zip code">
                </div>
              </div>
              <div class="col-md-3 col-sm-6">
                <div class="search-category-container">
                    <select class="form-control">
                      <option>All Categories</option>
                      <option>Finance</option>
                      <option>IT & Engineering</option>
                      <option>Education/Training</option>
                      <option>Art/Design</option>
                      <option>Sale/Markting</option>
                      <option>Healthcare</option>
                      <option>Science</option>
                      <option>Food Services</option>
                    </select>
                </div>
              </div>
              <div class="col-md-1 col-sm-6">
                <button type="button" class="form-control btn-primary "><%= icon ("search") %></button>
              </div>
            </div>
            </form>
          </div>
          <div class="popular-jobs">
            <b class="popular-key">Popular Keywords: </b>
            <a href="#">Web Design</a>
            <a href="#">Manager</a>
            <a href="#">Programming</a>
            <a href="#" data-toggle="modal" data-target="#myModal5">View More</a>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="clearfix"></div>
</div>

