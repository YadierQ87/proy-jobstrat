<section class="featured-jobs section">
  <div class="container">
    <div class="row">
      <h2 class="w3-abo col-lg-6"> Ultimos  Candidatos  </h2>
      <div class="col-lg-6">
        <%#= link_to icon("pencil-square-o","Publicar Trabajo"), new_job_path,:class => "btn btn-primary"%>
        <%= link_to icon("list-alt","Ver Todos"), employees_path,:class => "btn btn-success btn-rm" %>
      </div>
    </div>
    <div class="row">
      <%  @employees.each do |employee| %>
          <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="featured-item">
              <div class="featured-wrap">
                <div class="featured-inner">
                  <figure class="item-thumb">
                    <% if employee.image.file? %>
                        <%= image_tag employee.image.url(), :width=> 85, :height => 85 %>
                    <% else %>
                        <%= image_tag("blog/user2.png", :width=> 85, :height => 85) %>
                    <% end %>
                  </figure>
                  <div class="item-body">
                    <h3 class="job-title"><%= link_to icon("folder-open-o",employee.fullname) , employee  %></h3>
                    <div class="adderess"><%= employee.curriculum[0...25]%></div>
                  </div>
                </div>
              </div>
              <div class="item-foot">
                <span><%= icon ("phone")%> <%= employee.contact %></span>
                <span><%= icon ("envelope-o")%> <%= employee.email %> </span>
                <div class="view-iocn" data-toggle="tooltip"  data-placement="top" title=""
                     data-original-title="<%="Ver Resumen" %>">
                  <%= link_to icon('male'), employee, remote: true %>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</section>