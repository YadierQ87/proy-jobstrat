<!-- Services -->
<div class="popular-w3" id="services">
  <div class="container">
    <h3 class="ser-w3">Categories</h3>
    <section class="featured-jobs section">
    <div class="row">
      <% @categories = Category.all.order("category")
         @categories.each do |category| %>
          <div class="col-md-3 col-sm-4 col-xs-6">
            <div class="featured-item">
              <div class="featured-wrap">
                <div class="featured-inner">
                  <figure class="item-thumb">
                    <a class="hover-effect" href="job-page.html">
                    </a>
                  </figure>
                  <div class="item-body">
                    <h3 class="job-title ser-w4"><%= category.category %></h3>
                    <div class="adderess"><i class="ti-location-pin"></i> <%= category.category %></div>
                  </div>
                </div>
              </div>
              <div class="item-foot">
                <span># Jobs Publish</span>
                <div class="view-iocn">
                  <a href="#"><%= icon ("suitcase") %></a>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
    </section>
  </div>
</div>
