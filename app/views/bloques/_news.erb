  <!-- Container Starts to list Articles -->
  <section id="blog" class="section">
    <div class="container">
      <h3 class="ser-w3">        Latest News      </h3>
      <div class="row">
      <% @articles = Article.all
         @articles.each do |article| %>
          <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 blog-item">
            <div class="blog-item-wrapper">
              <div class="blog-item-img">
                <%= link_to (image_tag article.image.url(), :width=> 360, :height => 214), article_path(article) %>
              </div>
              <div class="blog-item-text">
                <div class="meta-tags">
                  <span class="date"><%= icon("calendar")%> <%= article.created_at %></span>
                  <span class="comments"><%= icon("edit")%></span>
                </div>
                <%= link_to (article.title), article_path(article) %>
                <p>
                  <%= article.text[0...80] %>
                </p>
                <%= link_to ("Read More"), article_path(article),class:"btn btn-common btn-rm" %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
  </section>

