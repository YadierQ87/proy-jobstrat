<div id="filterrific_results">
  <div>
    <%= page_entries_info aplicationjobs %>
  </div>

  <table class="table table-bordered table-header table-stripered">
    <thead>
    <tr>
      <th>Job</th>
      <th>Employee</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% aplicationjobs.each do |aplicationjob| %>
        <tr>
          <td><%= aplicationjob.job %></td>
          <td><%= aplicationjob.employee %></td>
          <td><%= aplicationjob.description %></td>
          <td><%= link_to icon('eye'), aplicationjob %></td>
          <td><%= link_to icon('pencil-square-o'), edit_aplicationjob_path(aplicationjob) %></td>
          <td><%= link_to icon('trash-o'), aplicationjob, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%  @total = (page_entries_info aplicationjobs).split('<b>')
    if @total.size == 3
      @total = @total[2].split('</b>')
    end
%>
<% if @total[0].to_i >= 10 %>
<%= paginate aplicationjobs %>
<% end  %>