<!DOCTYPE html>
<html>
<head>
  <title> Job Search by IRSTRAT</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>
<body>
<div class="Main-agile">
  <%= render 'bloques/head' %>
  <%= render 'bloques/slider' %>
  <!-- //header -->
</div>
<div class="clearfix"></div>
  <div class="container-fluid">
    <div class="container">
      <div class="row">
        <% if notice %>
            <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
            <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <h2 class="w3-abo">  Administration Panel | <span class="black">Section <%= @title %> </span></h2>
        <%= yield %>
      </div>
    </div>
  </div>
<%= render 'bloques/footer' %>
</body>
</html>
