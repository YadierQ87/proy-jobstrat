<section class="section content container">
  <br>
  <div class="container-fluid">
    <div class="box container">
      <h3 class="w3-abo head-sms"> Mensajes de Candidatos para los Trabajos Publicados <% current_user.company.company %> </h3>
      <hr>
      <% @item = 1;
         @jobs.each do |job| %>
          <% @cont = Aplicationjob.all.where(:job_id => job.id).order("updated_at DESC").count %>
          <div class="box container" style="width: 90%">
            <div class="col-md-12">
              <h4> <span class="red"><%= icon("briefcase") %> Trabajo/</span> <%= link_to job.title , job , remote: true %> </h4>
              <%= icon("envelope-o",@cont) %> mensaje(s)
            </div>
            <br>
                <% @sms = 1;
                   @appjob = Aplicationjob.all.where(:job_id => job.id).order("updated_at DESC")
                   @appjob.each do |appjob| %>
                <table class="table table-header table-bordered">
                  <tr>
                    <td><span class="red">#<%= @sms %></span></td>
                    <td>Autor <%= icon("user") %>  <%= link_to appjob.employee.fullname , appjob.employee , remote: true %></td>
                    <td>Fecha <%= icon("calendar") %> <%= appjob.created_at %> </td>
                    <td>
                      <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                      <%= icon("list-alt") %> Ver Mensaje </a>
                    </td>
                  </tr>
                  <tr id="collapseTwo" class="panel-collapse collapse">
                    <td colspan="4"><%= appjob.description %></td>
                  </tr>
                </table>
                <% @sms = @sms + 1; %>
                <%  end  %>
              <span class="badge right"><%= @item %></span>
              <% @item = @item + 1; %>
          </div>
      <% end %>
    </div>
  </div>
</section>





