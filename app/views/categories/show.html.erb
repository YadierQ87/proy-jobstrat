<div class="container">
  <div class="box" style="min-height: 220px; margin-bottom: 10px">
    <div class="row col-md-12">
      <div class="col-md-3">
        <% if @category.image.file? %>
            <%= image_tag @category.image.url(), :width=> 150, :height => 150 %>
        <% else %>
            <%= image_tag("category/category-default.png", :width=> 150, :height => 150) %>
        <% end %>
      </div>
      <div class="col-md-9 panel">
        <h4>
          <strong>Categor&iacute;:</strong> <%= @category.category %>
          <%= link_to icon("list-alt",'Categorias'), categories_path ,:class=>"btn btn-default btn-xs" %>
          <% if can? :edit, @category %>
              <%= link_to icon("pencil-square-o",'Edit'), edit_category_path(@category),:class=>"btn btn-default btn-xs" %>
          <% end %>
          <% if can? :delete, @category %>
              <%= link_to icon('trash-o','Eliminar'), @category, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-default btn-xs" %>
          <% end %>
        </h4>
        <hr>
        <h4><strong>Descripci&oacute;n</strong></h4>
        <%= @category.description %>
      </div>
      <div class="clear"></div>
    </div>
  </div>
</div>


