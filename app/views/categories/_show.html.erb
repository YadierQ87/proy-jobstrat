<div id="product-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"> <%= @category.category %></h4>
      </div>
      <!-- modal body -->
      <div class="modal-body">

        <div class="box container-fluid">
          <div class="row col-md-12">
            <div class="col-md-6">
              <% if @category.image.file? %>
                  <%= image_tag @category.image.url(), :width=> 150, :height => 150 %>
              <% else %>
                  <%= image_tag("category/category-default.png", :width=> 150, :height => 150) %>
              <% end %>
            </div>
            <div class="col-md-6">
              <h4>           <strong>Categor&iacute;a:</strong> <%= @category.category %> </h4>
                <br style="margin-bottom: 5px;">
                <%= link_to icon("list-alt",'Ver Todas'), categories_path ,:class=>"btn btn-default btn-xs"  %>
                <% if can? :edit, @category %>
                    <%= link_to icon("pencil-square-o",'Edit'), edit_category_path(@category) %>
                <% end %>
                <% if can? :delete, @category %>
                    <%= link_to icon('trash-o','Eliminar'), @category, method: :delete, data: { confirm: 'Are you sure?' }%>
                <% end %>

            </div>
            <hr style="margin-bottom: 5px;">
            <div class="col-md-12">
              <h4><strong>Descripci&oacute;n</strong></h4>
              <%= @category.description %>
            </div>
            <div class="clear"></div>
          </div>
        </div>

      </div>
      <!-- end modal body -->
    </div>
  </div>
</div>