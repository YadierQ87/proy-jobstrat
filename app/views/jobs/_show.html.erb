<div id="product-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
      <!-- modal body -->
      <div class="modal-body">

        <div class="box container-fluid">
          <div class="col-md-4">
            <div class="agileits_service_grid_btm_left1">
              <% if @job.image.file? %>
                  <%= image_tag @job.image.url(), :width=> 150, :height => 150 %>
              <% else %>
                  <%= image_tag("jobs/job-default.png", :width=> 150, :height => 150) %>
              <% end %>
            </div>
          </div>
          <div class="col-md-8">
            <div class="text-left">
              <h3> <strong><%= @job.title %></strong></h3>
              <p><strong> Empresa:</strong><%= @job.company.company %></p>
              <div class="meta">
                <span> <%= icon ("briefcase") %> <%= @job.category.category %></span><br>
                <span> <%= icon ("globe") %> <%= @job.m_country.ncountry %></span><br>
                <span> Publicado el: <%= icon ("calendar") %> <%= @job.created_at %></span><br>
              </div>
              <strong class="price"> Salario: <%= icon ("money") %> <%= @job.money %> $</strong>
              <a href="#" class="btn btn-border btn-sm">Freelance</a>
            </div>
            <div class="">
              <%= link_to icon("check-square-o","Solicitar"), "/aplicationjobs/new/#{@job.id}",class: "btn btn-common btn-sm" %>
            </div>
          </div>
          <hr>
          <div class="clearfix col-lg-12">
            <div class="col-lg-12"></div>
            <h4>Overview</h4>
            <p> <%= @job.description %> </p><br>
            <h4>Requirements</h4>
            <p> <%= @job.requisitos %> </p><br>
            <h4>Benefits</h4>
            <p> <%= @job.beneficios %> </p>
          </div>
        </div>

      </div>
      <!-- end modal body -->
    </div>
  </div>
</div>