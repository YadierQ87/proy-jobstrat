<p id="notice"><%= notice %></p>
<%= render "bloques/admin_section" %>
<br>
<div class="panel">
  <div class="panel panel-default">
    <div class="panel-heading">
      Admin Jobs
    </div>
  <div class="panel-body">
      <div class="row">
        <div class="col-lg-6">
          <%= form_for_filterrific @filterrific do |f| %>
              Search
              <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
              <%= f.text_field(   :search_query, class: 'filterrific-periodically-observed' ) %>
              <%# add an automated spinner to your form when the list is refreshed %>
              <%= render_filterrific_spinner %>
          <% end %>
          <%#= link_to( 'Reset filters', reset_filterrific_url, class: "btn-normal btn-sm") %>
        </div>
        <div class="col-lg-6">
          <%= link_to icon('plus-circle','Add Job'), new_job_path , class: "btn-primary btn-sm" %>
          Download:
          <%= link_to icon('file-code-o','CSV'), categories_path(format: "csv") %> |
          <%= link_to icon('file-excel-o','Excel'), categories_path(format: "xls") %>
        </div>
      </div>
    <hr>
<%= render(        partial: 'jobs/list',        locals: { jobs: @jobs }    ) %>
   </div>
<div class="panel-footer">
  &nbsp;<i class="right">jobs</i>
</div>
</div>
</div>
