<br>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      Admin Jobs
    </div>
  <div class="panel-body">
      <div class="row">
        <div class="col-lg-6">
          <%= form_for_filterrific @filterrific do |f| %>
              Records to show
              <%= select_tag :cantd, options_for_select([10,20,40].to_a, nil) %>
              Buscar Trabajos x Titulo
              <%= f.text_field(   :search_query, class: 'filterrific-periodically-observed' ) %>
<div class="panel row">
  <div class="col-md-4 box">
    x Pais
    <%= f.select(
            :with_country_id,
            @filterrific.select_options[:with_country_id],
            { include_blank: '- Any -' }
        ) %>
  </div>
  <div class="col-md-4 box">
    x Categoria
    <%= f.select(
            :with_category_id,
            @filterrific.select_options[:with_category_id],
            { include_blank: '- Any -' }
        ) %>
  </div>
  <div class="col-md-4 box">
    x Empresa
    <%= f.select(
            :with_company_id,
            @filterrific.select_options[:with_company_id],
            { include_blank: '- Any -' }
        ) %>
  </div>
  <%= link_to(
          'Reset filters',
          reset_filterrific_url,
      ) %>
  <%# add an automated spinner to your form when the list is refreshed %>
  <%= render_filterrific_spinner %>
</div>

          <% end %>
          <%#= link_to( 'Reset filters', reset_filterrific_url, class: "btn-normal btn-sm") %>
        </div>
        <div class="col-lg-6">
          <div class="right">
            <% if can? :create, Job %>
            <%= link_to icon('plus-circle','Add Job'), new_job_path  %>
            <% end %>
          </div>
        </div>
      </div>
    <hr>
<%= render(        partial: 'jobs/list',        locals: { jobs: @jobs }    ) %>
   </div>
<div class="panel-footer">
  &nbsp;<i class="right">jobs</i>
</div>
</div>
</div>
