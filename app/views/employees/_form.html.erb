<%= form_for(employee,method: :post,:multipart => true) do |f| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col-lg-6">
    <%= f.label :fullname %>
    <%= f.text_field :fullname , class: "form-control" %>
  </div>

  <div class="field col-lg-6">
      <%= f.label :image %>
      <%= f.file_field :image , class: "form-control file-img" %>
  </div>

    <div class="field col-lg-6">
      <%= f.label :email %>
      <%= f.text_field :email , class: "form-control"%>
    </div>

  <div class="field col-lg-6">
    <%= f.label :contact %>
    <%= f.text_field :contact, class: "form-control" %>
  </div>

    <div class="field col-lg-6">
      <%= f.label :m_country_id %>
      <%= f.select(:m_country_id, paises_id_for_select, { include_blank: 'Seleccionar Pais' }, class: "form-control") %>
    </div>

  <div class="field col-lg-6">
    <%= f.label :sex %>
    <%= f.select(:sex, ['MALE','FEMALE'], class: "form-control") %>
  </div>

    <div class="field col-lg-6">
      <%= f.label :username %>
      <%= f.text_field :username, class: "form-control" %>
    </div>

    <div class="field col-lg-6">
      <%= f.label :profesion %>
      <%= f.text_field :profesion, class: "form-control" %>
    </div>

    <div class="field col-lg-6">
      <%= f.label :password %>
      <%= f.text_field :password , class: "form-control" %>
    </div>

  <div class="field col-lg-6">
    <%= f.label :curriculum %>
    <%= f.text_area :curriculum , class: "form-control" %>
  </div>

    <div class="field col-lg-6">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

  <div class="field col-lg-6">
    <%= f.submit  :class => "btn btn-success btn-md" %>
  </div>

<% end %>
