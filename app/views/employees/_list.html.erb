<div id="filterrific_results">
  <div class="acciones_filtros_search">
    <%= page_entries_info employees %>
  </div>
<div class="container row">
  <%@num = 1;
    @employees.each do |employee| %>
      <div class="author-resume col-lg-6">
        <div class="thumb col-lg-2">
          <% if employee.image.file? %>
              <%= image_tag employee.image.url(), :width=> 85, :height => 85 %>
          <% else %>
              <%= image_tag("resume/img-1.jpg", :width=> 85, :height => 85) %>
          <% end %>
          <label class="img_counter"><%= @num %></label>
        </div>
        <div class="author-info col-lg-10">
          <h3> <%= link_to employee.fullname, employee %> </h3>
          <p class="sub-title"> username @<%= employee.username %></p>
          <p>
            <span class="address"><%= link_to icon("phone",employee.contact), "tel:#{employee.contact}" %>  </span>
            <span> <%= link_to icon("envelope",employee.email), "mailto:#{employee.email}" %> </span>
            <span> <%= icon("gender")%> <%= employee.sex %> </span>
          </p>
          <div class="social-link">
            <%= icon("file-text-o")%> <%= employee.curriculum[0...60] %>
          </div>
        </div>
        <div class="social-link col-lg-12">
          <% if can? :edit, employee %>
              <%= link_to icon("pencil-square-o",'Editar'), edit_employee_path(employee) %>
          <% end %>
          <% if can? :delete, employee %>
              <%= link_to icon('trash-o','Eliminar'), employee, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
      <% @num = @num+1 %>
  <% end %>
</div>
</div>
<%  @total = (page_entries_info employees).split('<b>')
    if @total.size == 3
      @total = @total[2].split('</b>')
    end
%>
<% if @total[0].to_i >= 10 %>
<%= paginate employees %>
<% end  %>