<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      Candidato: <%= @employee.fullname %>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-12 post-box">
          <h4>Datos Personales
          <%= link_to icon("list-alt",'Candidatos'), employees_path ,:class=>"btn btn-default btn-xs" %>
          <% if can? :edit, @employee %>
              <%= link_to icon("pencil-square-o",'Editar'), edit_employee_path(@employee),:class=>"btn btn-default btn-xs" %>
          <% end %>
          <% if can? :delete, @employee %>
              <%= link_to icon('trash-o','Eliminar'), @employee, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-default btn-xs" %>
          <% end %>
          </h4>
          <hr>
          <div class="col-lg-12">
            <div class="img-member col-md-3">
              <% if @employee.image.file? %>
                  <%= image_tag @employee.image.url(), :width=> 150, :height => 150 %>
              <% else %>
                  <%= image_tag("blog/user2.png", :width=> 150, :height => 150) %>
              <% end %>
            </div>
            <div class="col-md-3">
              <div class="col-md-12 panel"><%= icon("phone")%> <strong>Contact:</strong><%= @employee.contact %></div>
              <div class="col-md-12 panel"><%= icon("user")%> <strong>Username:</strong><%= @employee.username %></div>
              <div class="col-md-12 panel"><%= icon("male")%>  <strong>Sexo:</strong><%= @employee.sex %></div>
              <div class="col-md-12 panel"><%= icon("globe")%> <strong>Pais:</strong> <%= @employee.m_country.ncountry %></div>
              <div class="col-md-12 panel"><%= icon("envelope-o")%> <strong>Correo:</strong> <%= @employee.email %></div>
            </div>
            <div class="col-md-6">
              <h2 class=""> Description</h2>
              <hr>
              <%= @employee.description %>
            </div>

          </div>
          <hr>
          <div class="col-lg-12">
            <h2 class=""> Curriculum Vitae </h2>
            <hr>
             <p>  <%= @employee.curriculum %></p>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>