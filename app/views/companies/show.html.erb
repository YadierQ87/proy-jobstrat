
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
       Company
    </div>
    <div class="panel-body row">
      <div class="panel col-md-12">
        <h4><strong>Empresa</strong> <%= @company.company %>
          <%= link_to icon("list-alt",'Empresas'), companies_path ,:class=>"btn btn-default btn-xs" %>
          <% if can? :edit, @company %>
              <%= link_to icon("pencil-square-o",'Edit'), edit_company_path(@category),:class=>"btn btn-default btn-xs" %>
          <% end %>
          <% if can? :delete, @company %>
              <%= link_to icon('trash-o','Eliminar'), @company, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-default btn-xs" %>
          <% end %>
        </h4>
      </div>

        <div class="col-md-3">
          <div class="agileits_service_grid_btm_left1">
            <% if @company.image.file? %>
                <%= image_tag @company.image.url(), :width=> 250, :height => 250 %>
            <% else %>
                <%= image_tag("slider/slide1.jpg", :width=> 250, :height => 250) %>
            <% end %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="panel col-md-12"><strong> <%= icon("building") %> Empresa:</strong>  <%= @company.company %></div>
          <div class="panel col-md-12"><strong>  Fullname:</strong>  <%= @company.fullname %></div>
          <div class="panel col-md-12"><strong> <%= icon("user") %> Username:</strong>  <%= @company.username %></div>
          <div class="panel col-md-12"><strong> <%= icon("globe") %> Pais:</strong>  <%= @company.m_country_id %></div>
          <div class="panel col-md-12"><strong> <%= icon("phone") %> Contacto:</strong>  <%= @company.contact %></div>
          <div class="panel col-md-12"><strong> <%= icon("envelope") %> Email:</strong>  <%= @company.email %></div>
        </div>

        <div class="col-md-5">
          <h4>Description:</h4>
          <hr>
          <p><%= @company.description %></p>
        </div>

    </div>
  </div>
</div>