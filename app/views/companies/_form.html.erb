<div class="col-lg-12">
<%= form_for(company) do |f| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="row panel">
  <div class="field col-lg-6">
    <%= f.label :company %>
    <%= f.text_field :company , class: "my-form-st" %>
  </div>

  <div class="field col-lg-6">
    <%= f.label :fullname %>
    <%= f.text_field :fullname , class: "my-form-st" %>
  </div>

   <div class="field col-lg-6">
     <%= f.label :image %>
     <%= f.file_field :image %>
   </div>

   <div class="field col-lg-6">
    <%= f.label :description %>
    <%= f.text_area :description , class: "my-form-st" %>
  </div>

  <div class="field col-lg-6">
    <%= f.label :m_country_id %>
    <%= f.select(:m_country_id, paises_for_select, { include_blank: 'Seleccionar Pais' }) %>
  </div>

  <div class="field col-lg-6">
    <%= f.label :contact %>
    <%= f.text_field :contact , class: "my-form-st" %>
  </div>

  <div class="field col-lg-6">
    <%= f.label :email %>
    <%= f.text_field :email , class: "my-form-st" %>
  </div>

  <div class="field col-lg-6">
    <%= f.label :username %>
    <%= f.text_field :username , class: "my-form-st" %>
  </div>

  <div class="field col-lg-6">
    <%= f.label :password %>
    <%= f.text_field :password , class: "my-form-st" %>
  </div>

  <div class="actions col-lg-6">
    <%= f.submit %>
  </div>
 </div>

<% end %>
</div>