<p id="notice"><%= notice %></p>
<%= render "bloques/admin_section" %>
<br>
<div class="panel">
  <div class="panel panel-default">
    <div class="panel-heading">
      Admin Companies
    </div>
    <div class="panel-body">
      <p>
        <%= link_to icon('plus-circle','new'), new_company_path %>
        Download:
        <%= link_to icon('file-code-o','CSV'), categories_path(format: "csv") %> |
        <%= link_to icon('file-excel-o','Excel'), categories_path(format: "xls") %>
      </p>
<table class="table table-bordered table-header table-stripered">
  <thead>
    <tr>
      <th>Company</th>
      <th>Fullname</th>
      <th>Picture</th>
      <th>Description</th>
      <th>Country</th>
      <th>Contact</th>
      <th>Email</th>
      <th>Username</th>
      <th>Password</th>
      <th> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.company %></td>
        <td><%= company.fullname %></td>
        <td><%= company.picture %></td>
        <td><%= company.description %></td>
        <td><%= company.country %></td>
        <td><%= company.contact %></td>
        <td><%= company.email %></td>
        <td><%= company.username %></td>
        <td><%= company.password %></td>
        <td><%= link_to icon('file-code-o'), company %> |
          <%= link_to 'Edit', edit_company_path(company) %> |
          <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

    </div>
    <div class="panel-footer">
      <i class="right">companies</i>
    </div>
  </div>
</div>


